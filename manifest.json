{
  "manifest_version": 2,
  "name": "CuLipSum",
  "version": "1.0",

  "description": "Custom Lorem Ipsum Generator",

  "icons": {
    "48": "icons/icon_typewriter_48.png",
    "96": "icons/icon_typewriter_96.png"
  },

  "permissions": [
    "storage",
    "tabs"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "options_ui": {
    "page": "popup/options_popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/icon_typewriter_32.png",
    "default_title": "CuLipSum",
    "default_popup": "options_popup/options.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "addon@kinkycraft.com"
    }
  }
}